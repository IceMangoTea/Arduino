#!/usr/bin/python
import RPi.GPIO as GPIO
import time
GPIO.setwarnings(False)
GPIO.setmode(GPIO.BCM)
GPIO.setup(23,GPIO.OUT)
GPIO.setup(17,GPIO.OUT)
GPIO.setup(27,GPIO.OUT)
GPIO.setup(22,GPIO.OUT)
GPIO.setup(26,GPIO.OUT)
GPIO.setup(24,GPIO.IN)
GPIO.setmode(GPIO.BCM)

while True:
    GPIO.output(23,True)
    GPIO.output(26,True)
    if GPIO.input(24):
        time.sleep(2)
        GPIO.output(23,False)
        GPIO.output(26,False)
        GPIO.output(17,True)
        GPIO.output(22,True)        
        time.sleep(2)
        GPIO.output(17,False)
        GPIO.output(22,False)
        GPIO.output(27,True)
        time.sleep(1)
        GPIO.output(27,False)
        time.sleep(1)
        GPIO.output(27,True)
        time.sleep(1)
        GPIO.output(27,False)
        time.sleep(1)
        GPIO.output(27,True)
        time.sleep(1)
        GPIO.output(27,False)
        time.sleep(1)
        GPIO.output(27,True)
        time.sleep(1)
        GPIO.output(27,False)
        time.sleep(1)
        GPIO.output(27,True)
        time.sleep(1)
        GPIO.output(27,False)
    else:
        GPIO.output(17,False)
        GPIO.output(27,False)
        GPIO.output(22,False)
   
    time.sleep(1)
